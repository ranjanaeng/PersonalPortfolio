{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}",
            "runtimeArgs": [
                "--remote-debugging-port=9222",
                "--no-default-browser-check",
                "--disable-extensions",
                "--user-data-dir=/tmp/chrome-debug"
            ]
        }
    ]
}